@model DataCollector.Models.ChangePasswordModel


 
         @Html.ValidationSummary(false)
<div class="form-group" style="width:90%">
    @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", style = "height:20px; text-align: center", id = "email", placeholder = "رمز قدیم" })
</div>
<div class="form-group" style="width:90%">
    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", style = "height:20px; text-align: center", id = "pwd", placeholder = "رمز جدید" })
</div>
<div class="form-group" style="width:90%">
    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", style = "height:20px; text-align: center", id = "pwd2", placeholder = "تکرار رمز جدید" })
</div>


