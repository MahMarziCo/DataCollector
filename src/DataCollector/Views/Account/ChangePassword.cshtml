@model DataCollector.Models.ChangePasswordModel

@using (Ajax.BeginForm(new AjaxOptions() { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, Url = "/Account/ChangePasswordControl", UpdateTargetId = "changePasswordDiv", OnSuccess = "ChangePassword_Class.CloseWindow" }))
{
    <div class="form-group" style="width:250px">

        @Html.HiddenFor(m => m.UserName)
        <div id="changePasswordDiv">

            @Html.Partial("ChangePasswordControl")
        </div>
        <div class="form-group" style="width:90%">
            <button type="submit" style="height:20px" class="form-control btn btn-success">اعمال</button>
        </div>
    </div>
}
<script>
    ChangePassword_Class = {
        CloseWindow: function (data) {
            if (data.indexOf("input-validation-error") > -1 || data.indexOf("validation-summary-errors") > -1) return;
            $("#changePassWin").data("kendoWindow").close();
        }
    }
</script>

